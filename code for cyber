<body>
  <div class="dialogue-container">
    <div class="dialogue-box">
      <p id="dialogue"></p><span class="cursor"></span>
<script>
  const text = "Sir we need you to go to our ships pronto"; // Dialogue text
  const dialogueEl = document.getElementById("dialogue");
  let index = 0;
  function typeText() {
    if (index < text.length) {
      dialogueEl.innerHTML += text.charAt(index);
      index++;
      setTimeout(typeText, 60); // speed (ms per character)
    }
  }
  window.onload = typeText;
</script>
</body>
