<style>
  body {
    margin: 0;
    height: 100vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: url('https://m.media-amazon.com/images/I/716zxBtHBDL._UF894,1000_QL80_.jpg') no-repeat center/cover;
    overflow: hidden;
    font-family: sans-serif;
  }
  .dialogue-container {
    position: relative;
    display: flex;
    align-items: flex-end;
    width: 80%;
    margin-bottom: 50px;
  }
  .dialogue-box {
    flex: 1;
    padding: 20px;
    border-radius: 12px;
    color: white;
    font-size: 1.2rem;
    line-height: 1.4;
    position: relative;
    backdrop-filter: blur(8px); /* background blur */
    background: rgba(0, 0, 0, 0.5);
    min-height: 80px;
  }
  .character {
    margin-left: 20px;
    max-height: 300px;
    border-radius: 8px;
  }
  /* Optional blinking cursor effect */
  .cursor {
    display: inline-block;
    width: 10px;
    background: white;
    animation: blink 0.7s steps(1) infinite;
    margin-left: 2px;
  }
  @keyframes blink {
    50% { background: transparent; }
  }
